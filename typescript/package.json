{
  "name": "zsxq-sdk-demo",
  "version": "1.0.0",
  "description": "知识星球 SDK TypeScript 示例项目",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "demo": "ts-node src/index.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"\\.unit\\.test\\.ts$\"",
    "test:integration": "jest --testPathPattern=\"\\.integration\\.test\\.ts$\"",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "zsxq-sdk": "file:../../zsxq-sdk/packages/typescript"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
